<%- include("../partials/header.ejs") %>

<div class="well" id="login-card" style="width: 70%; margin: auto">
    <!--    top pane-->
    <div class="jumbotron">
        <div class="container">
            <h2 style="text-align: center">Edit your comment</h2>
        </div>
    </div>
    <!--    form content-->
    <div>
        <form action="/articles/<%= article_id %>/comments/<%= comment["_id"] %>?_method=PUT" method="post">
            <div class="form-group">
                <label>Comment:</label>
                <textarea style="resize: vertical; min-height: 100px" class="form-control" name="comment[text]"
                          placeholder="Enter your comment"><%= comment["text"] %></textarea>
            </div>
            <div class="form-group">
                <button style="width: 30%; margin: auto" class="btn btn-lg btn-block btn-primary" type="submit">Update
                </button>
            </div>
        </form>
        <a href="javascript:history.back()">Go back</a>
    </div>
</div>

<%- include("../partials/footer.ejs") %>