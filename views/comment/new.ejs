<%- include("../partials/header.ejs") %>

<div class="well" id="login-card" style="width: 70%; margin: auto">
    <!--    top pane-->
    <div class="jumbotron">
        <div class="container">
            <h2 style="text-align: center">Add New Comment to:<br><strong><em><%= article["title"] %></em></strong></h2>
        </div>
    </div>
    <!--    form content-->
    <div>
        <form action="/articles/<%= article["_id"] %>/comments" method="post">
            <div class="form-group">
                <label>Comment:</label>
                <textarea style="resize: vertical; min-height: 100px" class="form-control" name="comment[text]"
                          placeholder="Enter your comment"></textarea>
            </div>
            <div class="form-group">
                <button style="width: 30%; margin: auto" class="btn btn-lg btn-block btn-primary" type="submit">Submit
                </button>
            </div>
        </form>
        <a href="/articles/<%= article["_id"] %>">Go back</a>
    </div>
</div>

<%- include("../partials/footer.ejs") %>
