<%- include("./partials/header.ejs") %>

<div class="well" id="request-card">
    <!--    top pane-->
    <div class="jumbotron">
        <div class="container">
            <h2>Reset Password</h2>
            <img id="logo-image" src="/images/logo_main.png" alt="" width="20%" height="20%">
        </div>
    </div>
    <!--    form content-->
    <div style="width: 30%; margin: 25px auto;">
        <form action="/request-reset" method="post">

            <div class="form-group">
                <label>Associated email: </label>
                <input type="email" name="email" autofocus class="form-control"
                       placeholder="Enter the email associated with your account" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Request Reset</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

    </div>
</div>

