<%- include("../partials/header.ejs") %>

<div class="well" id="login-card">
    <!--    top pane-->
    <div class="jumbotron">
        <div class="container">
            <h1>Login</h1>
            <img id="logo-image" src="/images/logo_main.png" alt="" width="20%" height="20%">
        </div>
    </div>
    <!--    form content-->
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/login" method="post">
            <div class="form-group">
                <label>Username: </label>
                <input class="form-control" type="text" name="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label>Password: </label>
                <input class="form-control" type="password" name="password" placeholder="Enter your password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </div>
        </form>
        <a href="/">Go Back</a>
        <a href="/request-reset" style="float: right">Forgot password ?</a>
    </div>
</div>


<%- include("../partials/footer.ejs") %>